<div>
  <%= flash[:notice] %>
</div>
<main>
 <div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">

<h2>User info</h2>
  <% if @user.profile_image.attached? %>
  <%= image_tag @user.get_image, size: "100x100" %>
   <% else %>
    <%= image_tag 'no_image', size: "100x100" %>
  <% end %>
  <table class = "table">
  <tbody>
   <tr></tr>
    <tr>
      <th>name</th>
      <th><%= @user.name %></th>
    </tr>
  <tr>
    <th>introduction</th>
    <th><%= @user.introduction %></th>
  </tr>
 </tbody>
</table>

<%= link_to  edit_user_path(@user.id),class:"col btn btn-outline-secondary" do %>
    <i class="fas fa-user-cog"></i>
    <% end %>
<h2 class="mt-3">New book</h2>
<%= form_with model: @newbook do |f| %>

 <div>
 <label for="book_title">Title</label>
</div>
 <%= f.text_field :title %>
 <div>
 <label for="book_opinion">Opinion</label>
</div>
 <%= f.text_area :body %>
 <%= f.submit "Create Book",class:"btn btn-success" %>
<% end %>
  </div>



<div class ="col-md-8 offset-md-1">
  <h2>Books</h2>
  <table class = "table table-hover table-inverse">
     <thead>
      <tr>
      <th></th>
      <th>Title</th>

      <th>Opinion</th>

      <th colspan="3"></th>
    </tr>
     </thead>

     <tbody>
      <% @books.each do |book| %>
       <tr>
        <td>
         <%= link_to user_path(@user.id) do %>
          <% if @user.profile_image.attached? %>
          <%= image_tag @user.get_image, size: "100x100" %>
          <% else %>
          <%= image_tag 'no_image', size: "100x100" %>
          <% end %>
         <% end %>
          </td>
       <td> <%= link_to book.title, book_path(book.id) %></td>
        <td><%= book.body %></td>
      </tr>
      <% end %>
     </tbody>

   </table>
 
</div>


   </div>
  </div>
 </main>